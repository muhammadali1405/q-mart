<div id="right_body">
  <div class="container">
    <div class="row">
      {{#each products}}

      <div class="item" style="width: 10rem;height:20rem;">
        <a href="#" style="text-decoration: none;"> <img style="width: 90%;height:60%;" src="/product-images/{{this._id}}.jpg" class="card-img-top"
            alt="...">
          <div class="item-details">
            <p class="item-name"> <span style="font-family: 'PT Serif', serif;color:black;">{{this.name}} <br> Rs: </span><span
                id="price" class="price"
                style="color: green;font-family: 'Space Grotesk', sans-serif;">{{this.price}}/Kg</span></p>
          </div>
        </a>
        <div class="cart_btn">
          <button type="button" data-sku="490155015" class="qtybtn qty_add qty_minus ">-</button>
          <span class="qty_count"><input style="width: 6rem;" type="text" placeholder="value"></span>
          <button type="button" data-sku="490155015" data-max="4" class="qtybtn qty_add qty_plus ">+</button>
        </div>


        <button class="btn btn-warning mt-3" style="padding: 2px 1px;font-size:12px;" id="addtocart-button"> Add to cart
        </button>
      </div>
      {{/each}}
    </div>
  </div>
</div>