<h2 class="header" style="margin-left: 35%;">My Orders</h2>


<section class="container pt-3">
    <table>
        <th> Sl No</th>
        <th>Items</th>
        <th>Total Amount</th>
        <th>Delivery Address</th>
        <th>Order status</th>

        {{#each order}}
        <tr>
            <td class="nr" style="width: 10%;"></td>
            <td>
                <table>
                    <th>Item</th>
                    <th>Qty</th>
                    {{#each itemDetails}}
                    <tr>
                        <td>{{product.name}}</td>
                        <td>{{quantity}}</td>
                    </tr>
                    {{/each}}
                </table>
            </td>
            <td>{{getTotalAmount}}</td>
            <td>
                {{deliveryDetails.address}}, {{deliveryDetails.village}} Village,near {{deliveryDetails.landmark}}
            </td>
            <td>{{status}}</td>
        </tr>

        {{/each}}

    </table>
    

</section>

<style>

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;

    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #ecf2ff;
    }
</style>

<script type="text/javascript">
    var a = document.getElementsByClassName("nr");
    for (var i = 0; i < a.length; i++) {
        a[i].innerHTML = (i + 1) + ".";
    }
</script>