<div class="whole" style="width: 100%;overflow:scroll;">
    {{#each order}}
    <a href="/get-order-details/{{this._id}}" class="eachOrder" style="text-decoration: none;color:black;">
        <div class="each-order" style="padding:10px 10px 10px 10px;border-radius:7px;">
            <h1 class="nr" style="width: 10%;"></h1>
            <h3>Order Placed <span style="text-align:right;color:rgb(22, 179, 92);font-weight:700;">(Rs:
                    {{getTotalAmount}}/-)</span></h3>
            <div style="overflow-x:auto;">
                <table style="width: 300px;overflow-x:auto;">
                    <th>Item</th>
                    <th>Qty</th>
                    {{#each itemDetails}}
                    <tr>
                        <td>{{product.name}}</td>
                        <td>{{quantity}}</td>
                    </tr>
                    {{/each}}
                </table>
            </div>
            <div style="padding: 10px 0 10px 0;">
                <h4>Delivery Address:</h4>
                {{deliveryDetails.address}}, {{deliveryDetails.village}} Village, near {{deliveryDetails.landmark}}
                <br>
                <b>Contact:</b> {{deliveryDetails.number}}, {{newmobile}}
                <h5 style="color: rgb(54, 58, 58);">Payment: {{paymentMethod}}</h5>

            </div>

        </div>
    </a>
    <hr><hr>
    {{/each}}
</div>





<style>
    .whole {
        margin-left: 2%;
        display: flex;
        flex-direction: row;

    }

    .each-order {
        background: white;
        margin-left: 30px;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;

    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #ecf2ff;
    }

    @media only screen and (max-width: 600px) {
        .whole {
            margin-left: 0px;
            display: table;
        }

        .each-order {
            margin: 10px 0 0 10px;
        }
    }

</style>

<script type="text/javascript">
    var a = document.getElementsByClassName("nr");
    for (var i = 0; i < a.length; i++) {
        a[i].innerHTML = "#" + (i + 1);
    }
</script>