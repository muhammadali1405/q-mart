<section >
<form class="container mt-5" action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
    <h2>Edit product</h2>
    <div class="form-group">
        <label for="name">Item Name</label>
        <input type="text" class="form-control" name="name" value="{{product.name}}">
    </div>


    <div class="form-group">
        <label for="category">category</label>
        <select class="form-control" name="category">
            <option>Grocery</option>
            <option>Bakery</option>
            <option>Fruits & Vegitables</option>
            <option>Beverages</option>
            <option>Essentials</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Product description</label>
        <input class="form-control" name="description"  value="{{product.description}}">
    </div>
    <div class="form-group">
        <label for="name">price</label>
        <input type="number" style="width: 150px;height:35px;" name="price" class="form-control" value="{{product.price}}">
    </div>

    <div class="form-group">
        <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 13rem;" id="imgView">
        <input type="file" name="image" class="form-control-file mt-5" onchange="viewImage(event)" >
        <button style="margin-left: 25%;margin-top:10px;" type="submit" class="btn btn-success">Confirm</button>
    </div>
</form>
</section>

<script >
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>