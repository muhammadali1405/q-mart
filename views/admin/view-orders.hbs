<h2 class="header" style="margin-left: 35%;">All Orders</h2>


<section class="container pt-3" style="overflow: scroll;">
    <table class="table table-striped" >
        <thead class="thead-dark" >
            <tr>
                <th>Sl No</th>
                <th>Items</th>
                <th>Total Amount</th>
                <th>contact</th>
                <th>Delivery Address</th>
                <th>Order status</th>
                <th>Response</th>
            </tr>
        </thead>
        <tbody>

            {{#each order}}
            <tr>
                <td > <h3 class="nr" style="width: 10%;"> </h3> </td>
                <td>
                    <table>
                        <th>Item</th>
                        <th>Qty</th>
                        {{#each itemDetails}}
                        <tr>
                            <td>{{product.name}}</td>
                            <td>{{quantity}}</td>
                        </tr>
                        {{/each}}
                    </table>
                </td>
                <td>{{getTotalAmount}}</td>
                <td>{{name}}<br>{{newmobile}}</td>
                <td>
                   <b> {{deliveryDetails.address}}, {{deliveryDetails.village}} Village,near {{deliveryDetails.landmark}}
                    ,{{deliveryDetails.number}} </b>
                    <br>
                     <i> {{date}} </i>
                </td>
                <td>
                    <b>{{status}}</b>
                    <br>
                    <i> {{paymentMethod}} </i>

                </td>
                <td>
                    <a href="" class="btn btn-info mt-2">Shipped</a>
                    <a href="" class="btn btn-success mt-2">Delivered</a>
                </td>
            </tr>
            {{else}}

            <h1>No order found</h1>

            {{/each}}
        </tbody>
    </table>


</section>

